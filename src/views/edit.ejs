<% include partials/header.ejs %>

<div class="container p-4">

    <div class="row">
        <div class="col-sm-121212121212121212121212">
            <div class="card mx-auto">
                <div class="card-body">

                    <form action="/todo/edit/<%= todo._id %>" method="post">
                        <div class="form-group">
                            <label for="todo">Todo Name:</label>
                            <input type="text" name="text" placeholder="Add Todo" value="<%= todo.text %>"
                                   class="form-control">
                        </div>

                        <div class="form-group">
                            <label for="body">Todo Body:</label>
                            <textarea id="body" name="body" placeholder="body" class="form-control">
                <%= todo.body %>
              </textarea>
                        </div>

                        <button type="submit" class="btn btn-primary">Add Todo</button>
                        <a href="/" class="btn btn-danger">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


